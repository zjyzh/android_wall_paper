<?xml version="1.0" encoding="utf-8"?>




<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="data"
            type="com.example.final_wallpaper.MainViewModel" />

    </data>

    <FrameLayout
        android:id="@+id/fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/single_pic_car"
                android:backgroundTint="@color/white"

                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="lollipop"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:focusable="true"
                android:onClick="chooseImgs"
                >




            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1200dp"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/single_pic_car"
                android:id="@+id/muti_img_card"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:focusable="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/muti_img_liner"
                    android:orientation="horizontal">

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>
