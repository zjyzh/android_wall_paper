<?xml version="1.0" encoding="utf-8"?>




<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="data"
            type="com.example.final_wallpaper.MainViewModel" />

        <variable
            name="imageUrl"
            type="String" />
    </data>

    <FrameLayout

        android:id="@+id/relativelayout_global"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/scroll_img">

            <LinearLayout
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:context=".MainActivity"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/home_background"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:profileImage="@{imageUrl}"
                    android:padding="0dp" />

            </LinearLayout>
        </ScrollView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/single_pic_car"
                android:backgroundTint="@color/white"

                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="lollipop"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:focusable="true"
                android:onClick="chooseImgs"
                >
                <include layout="@layout/single_img_card_layout" />



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1200dp"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/single_pic_car"
                android:id="@+id/muti_img_card"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:focusable="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/muti_img_liner"
                    android:orientation="horizontal">

                </LinearLayout>

<!--                <include layout="@layout/fragment_muti_img_fragment" />-->



            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>
